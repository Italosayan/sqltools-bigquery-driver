{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "title": "Name",
      "type": "string",
      "minLength": 1,
      "default": "BigQuery"
    },
    "authenticator": {
      "title": "Authenticator",
      "type": "string",
      "enum": [
        "SERVICE_ACCOUNT",
        "OAUTH",
        "CLI"
      ],
      "enumNames": [
        "Service Account",
        "OAuth Access Token",
        "GCloud CLI"
      ],
      "default": "SERVICE_ACCOUNT"
    }
  },
  "dependencies": {
    "authenticator": {
      "oneOf": [
        {
          "properties": {
            "authenticator": {
              "enum": [
                "SERVICE_ACCOUNT"
              ]
            },
            "keyfile": {
              "title": "Keyfile",
              "type": "string",
              "minLength": 1
            }
          },
          "required": [
            "authenticator", "keyfile"
          ]
        },
        {
          "properties": {
            "authenticator": {
              "enum": [
                "OAUTH"
              ]
            },
            "projectId": {
              "title": "Project ID",
              "type": "string",
              "minLength": 1
            },
            "token": {
              "title": "OAuth Token",
              "type": "string",
              "minLength": 1
            }
          },
          "required": [
            "authenticator", "token", "projectId"
          ]
        },
        {
          "properties": {
            "authenticator": {
              "enum": [
                "CLI"
              ]
            },
            "projectId": {
              "title": "Project ID",
              "type": "string",
              "minLength": 1
            }
          },
          "required": [
            "authenticator", "projectId"
          ]
        }
      ]
    }
  }
}